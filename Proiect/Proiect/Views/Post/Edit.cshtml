@model Proiect.Models.Post

<h2 class="text-center mt-5">Edit Post</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Post",
            method: FormMethod.Post,
            routeValues: new { id = Model.Id }))  //we have id here because it should match with model attribute, id
            {
                /* @Html.HiddenFor(m => m.Id)  */


                @Html.Label("Message", "Post Message")
                <br />
                @Html.EditorFor(m => m.Message, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.Message, null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn btn-sm btn-success" type="submit">Edit Post</button>

            }
        </div>
    </div>

</div>

