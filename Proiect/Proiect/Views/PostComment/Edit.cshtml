@model Proiect.Models.Post_Comment

<div class="card-title alert-success py-3 px-3 rounded-2">
    <h2 class="text-center mt-5" style="font-weight:bold">Edit Post Comment</h2>
    <br />
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "PostComment",
            method: FormMethod.Post,
            routeValues: new { id = Model.Id }))  //we have id here because it should match with model attribute, id
            {
                /* @Html.HiddenFor(m => m.Id)  */


                @Html.Label("Message", "Comment Message")
                <br />
                @Html.EditorFor(m => m.Message, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.Message, null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn btn-sm btn-success" type="submit">Edit Comment</button>

            }
        </div>
    </div>

</div>

