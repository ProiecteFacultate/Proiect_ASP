@model Proiect.Models.Post_Comment
<h2 class="text-center mt-5">Add Comment</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "NewComment", controllerName: "PostComment",
            method: FormMethod.Post,
            routeValues: new { postId = ViewBag.PostId }))       //the id of the post we are commenting to
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Message", "Your Comment")
                <br />
                @Html.TextBox("Message", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn btn-success" type="submit">Add comment</button>
            }

        </div>
    </div>
</div>